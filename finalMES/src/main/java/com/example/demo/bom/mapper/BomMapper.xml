<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.bom.mapper.BomMapper">
    <select id="getProdList" resultType="com.example.demo.inform.ProdVO">
        SELECT * FROM product
    </select>
    
    <select id="getOriginMaterialList" resultType="com.example.demo.material.OriginMaterialVO">
    	SELECT * FROM material
    </select>
    
	<select id="getBomSeq" resultType="int">
		select bom_code_seq.nextval from dual
	</select>
	
	<insert id="bomInsert" parameterType="BomVO">
		insert into
		bom_material(bom_num, mat_code, proc_code, prod_code, bom_mat_count)
		values(#{bomNum}, #{matCode}, #{procCode}, #{prodCode}, #{bomMatCount})
	</insert>
</mapper>